            padding: 6rem 0 3rem;
        }

        .poems-stats {
            gap: 1.5rem;
        }

        .stat-value {
            font-size: 2rem;
        }

        .poem-header {
            flex-wrap: wrap;
        }

        .poem-title {
            font-size: 1.25rem;
        }

        .poem-card {
            padding: 1.5rem;
        }
    }
</style>
